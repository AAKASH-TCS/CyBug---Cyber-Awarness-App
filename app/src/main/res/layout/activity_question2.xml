<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Question_2"
    android:background="@drawable/gradient_list"
    android:id="@+id/Gradientlayout"

>


    <TextView
        android:id="@+id/crt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/oswald_medium"
        android:gravity="center"
        android:text="ANSWER THE BELOW QUESTIONS"
        android:textColor="#F3F2F2"
        android:textSize="30dp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:backgroundTint="#170C0C">

        <TextView
            style="@style/CardView.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="40dp"
            android:background="#009587"
            android:backgroundTint="#11B8B8"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="2.Unauthorized access to control over computer network security systems"
            android:textColor="#46374A"
            android:textSize="30dp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"

        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/check_button2"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/but_back"
            android:text="Security"
            android:textSize="16dp"
            app:backgroundTint="#009688"
            app:cornerRadius="50dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/check_button3"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:background="@drawable/but_back"
            android:text="Hacking"
            app:backgroundTint="#009688"


            app:cornerRadius="50dp">

        </com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/check_button22"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/but_back"
            android:text="Surfing"
            android:textSize="16dp"
            app:backgroundTint="#009688"
            app:cornerRadius="50dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/check_button23"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:background="@drawable/but_back"
            android:text="Dancing"
            android:textSize="16dp"
            app:backgroundTint="#009587"
            app:cornerRadius="50dp">

        </com.google.android.material.button.MaterialButton>
    </LinearLayout>

